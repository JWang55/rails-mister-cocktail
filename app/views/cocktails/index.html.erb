
<h2> All Cocktails</h2>
<%= link_to "Add a new Cocotail", new_cocktail_path %>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
          <%= cocktail.name %>
          <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
      </div>
    <% end %>
  </div>
</div>
